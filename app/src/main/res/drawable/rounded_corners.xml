<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Color -->
    <solid android:color="#FFFFFF"/>

    <!-- Corner Radius -->
    <corners android:radius="28dp"/>

    <!-- Optional: Border/Stroke -->
    <stroke
        android:width="0dp"
        android:color="#CCCCCC"/>

    <!-- Optional: Padding -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
